{
	"layer": "top",
	"modules-left": ["custom/leftspacer","custom/launcher", "custom/wallpaper", "cpu", "memory", "disk", "mpris"],
	"modules-center": ["hyprland/workspaces"],
	"modules-right": ["tray","pulseaudio","network","battery","clock","custom/rightspacer"],

	"pulseaudio": {
		"tooltip": false,
		"scroll-step": 1,
		"format": "{icon} {volume}% ({desc})",
		"format-muted": "{icon} Muted",
		"on-click":"pactl set-sink-mute @DEFAULT_SINK@ toggle",
		"on-click-right":"pavucontrol",
		"format-icons": {
			"default": ["", "", ""]
		},
		"ignored-sinks": ["Easy Effects Sink"]
	},
	"network": {
		"tooltip": false,
		"format-wifi": "  {essid}",
		"format-ethernet": ""
	},
	"battery": {
		"states": {
			"good": 95,
			"warning": 30,
			"critical": 20
		},
		"format": "{icon}  {capacity}%",
		"format-charging": " {capacity}%",
		"format-plugged": " {capacity}%",
		"format-alt": "{time} {icon}",
		"format-icons": ["", "", "", "", ""]
	},
	"tray":{
		"icon-size":18,
		"spacing": 18
	},
	"clock": {
		"format": "{:%A, %d. %m. %Y %R}",
		"tooltip-format": "<tt><small>{calendar}</small></tt>",
		"calendar": {
			"mode"          : "month",
			"mode-mon-col"  : 3,
			"weeks-pos"     : "right",
			"on-scroll"     : 1,
			"format": {
				"months":     "<span color='#ffead3'><b>{}</b></span>",
				"days":       "<span color='#ecc6d9'><b>{}</b></span>",
				"weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
				"weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
				"today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
			}
		},
		"actions":  {
			"on-click-right": "mode",
			"on-click-forward": "tz_up",
			"on-click-backward": "tz_down"
		}
	},
	"cpu": {
		"interval": 15,
		"format": " {}%",
		"max-length": 10
	},
	"memory": {
		"interval": 30,
		"format": " {}%",
		"max-length": 10
	},
	"disk": {
    "interval": 30,
    "format": " {percentage_used}%",
    "path": "/",
		"on-click": "gnome-disks"
	},
	"custom/launcher":{
		"format": " ",
		"on-click": "tofi-drun",
		"on-click-right": "killall tofi-drun"
	},
	"custom/wallpaper":{
		"format":"",
		"on-click": "waypaper"
	},
	"custom/leftspacer":{
		"format":" "
	},
	"custom/rightspacer":{
		"format":" "
	},
	"hyprland/workspaces": {
		"active-only": false,
		"format": "{icon}",
		"all-outputs": false
	},
	"mpris": {
		"format": "{player_icon} {player}: {title} {status_icon}",
		"format-paused": "{player_icon} {player}: <i>{title}</i> {status_icon}",
		"player-icons": {
			"default": " ",
			"spotify": " ",
			"brave": "",
			"vlc": ""
		},
		"status-icons": {
			"playing": " ",
			"paused": " ⏸"
		}
	}
}
