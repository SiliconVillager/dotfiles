{
	"layer": "top",
	"modules-left": ["custom/leftspacer","custom/launcher","custom/media","hyprland/workspaces"],
	"modules-center": ["cpu", "memory"],
	"modules-right": ["tray","pulseaudio","network","battery","clock","custom/rightspacer"],

	"pulseaudio": {
		"tooltip": false,
		"scroll-step": 1,
		"format": "{icon} {volume}%",
		"format-muted": "{icon} {volume}%",
		"on-click":"pactl set-sink-mute @DEFAULT_SINK@ toggle",
		"format-icons": {
			"default": ["", "", ""]
		}
	},
	"network": {
		"tooltip": false,
		"format-wifi": "  {essid}",
		"format-ethernet": ""
	},
	"battery": {
		"states": {
			"good": 95,
			"warning": 30,
			"critical": 20
		},
		"format": "{icon}  {capacity}%",
		"format-charging": " {capacity}%",
		"format-plugged": " {capacity}%",
		"format-alt": "{time} {icon}",
		"format-icons": ["", "", "", "", ""]
	},
	"tray":{
		"icon-size":18,
		"spacing": 18
	},
	"clock": {
		"format": "{0:%H:%M | %d/%m/%Y}"
	},
	"cpu": {
		"interval": 15,
		"format": " {}%",
		"max-length": 10
	},
	"memory": {
		"interval": 30,
		"format": " {}%",
		"max-length": 10
	},
	"custom/media": {
		"interval": 30,
		"format": "{icon} {}",
		"return-type": "json",
		"max-length": 20,
		"format-icons": {
			"spotify": " ",
			"default": " "
		},
		"escape": true,
		"exec": "$HOME/.config/system_scripts/mediaplayer.py 2> /dev/null",
		"on-click": "playerctl play-pause"
	},
	"custom/launcher":{
		"format": " ",
		"on-click": "tofi-drun",
		"on-click-right": "killall tofi-drun"
	},
	"custom/wallpaper":{
		"format":" ",
		"on-click": "bash ~/.config/system_scripts/pkill_bc"
	},
	"custom/leftspacer":{
		"format":" "
	},
	"custom/rightspacer":{
		"format":" "
	},
	"hyprland/workspaces": {
		"active-only": false
	}
}
